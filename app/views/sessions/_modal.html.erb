<!-- Button trigger modal -->
<button id="buttonModal"  type="button" class="btn btn-primary d-none" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Please login or Signap</h5>
      </div>
      <div class="modal-body">
        Only 5 page transitions are available to an unregistered author
      </div>
      <div class="modal-footer">
        <%= link_to "Sign Up", signup_path, class: "btn btn-outline-primary me-2" %> or
        <%= link_to "Log In", login_path, class: "btn btn-outline-primary me-2" %>
      </div>
    </div>
  </div>
</div>

<script >
    document.getElementById("buttonModal").click()
</script >
